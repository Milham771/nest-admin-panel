<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/product" class="text-decoration-none text-muted">Products</a></li>
        <li class="breadcrumb-item active fw-bold text-dark" aria-current="page">Edit {{product.name}}</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <h4 class="fw-bold mb-4">Edit Product</h4>
            <form action="/product/{{product.id}}/update" method="POST">
                <div class="mb-3">
                    <label class="form-label small fw-bold text-uppercase">Product Name</label>
                    <input type="text" name="name" class="form-control bg-light border-0 py-2" value="{{product.name}}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label small fw-bold text-uppercase">Category</label>
                    <select name="categoryId" class="form-select bg-light border-0 py-2" required>
                        {{#each categories}}
                        <option value="{{this.id}}" {{#if (eq this.id ../product.category.id)}}selected{{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label small fw-bold text-uppercase">Price</label>
                        <input type="number" step="0.01" name="price" class="form-control bg-light border-0 py-2" value="{{product.price}}" required>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label small fw-bold text-uppercase">Stock</label>
                        <input type="number" name="stock" class="form-control bg-light border-0 py-2" value="{{product.stock}}" required>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/product" class="btn btn-light px-4">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
