<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold m-0">Products</h2>
    <div class="d-flex gap-2">
        <form action="/product" method="GET" class="d-flex gap-2">
            <input type="text" name="search" class="form-control form-control-sm border-0 bg-white shadow-sm" placeholder="Search products..." value="{{search}}" style="width: 250px;">
            {{#if search}}
                <a href="/product" class="btn btn-light btn-sm border shadow-sm">Clear</a>
            {{/if}}
            <button type="submit" class="btn btn-dark btn-sm shadow-sm px-3">Search</button>
        </form>
        <button class="btn btn-primary btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#addProductModal">
            + New Product
        </button>
    </div>
</div>

<div class="card overflow-hidden">
    <table class="table m-0">
        <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>
                    <div class="fw-semibold">{{this.name}}</div>
                    <small class="text-muted">ID: #{{this.id}}</small>
                </td>
                <td>
                    <span class="badge bg-light text-dark border fw-normal">{{this.category.name}}</span>
                </td>
                <td class="fw-semibold">${{this.price}}</td>
                <td>{{this.stock}}</td>
                <td class="text-end">
                    <div class="btn-group">
                        <a href="/product/{{this.id}}/edit" class="btn btn-light btn-sm border text-primary">Edit</a>
                        <form action="/product/{{this.id}}/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this product?')">
                            <button type="submit" class="btn btn-light btn-sm border text-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            {{/each}}
            {{#unless products}}
            <tr>
                <td colspan="5" class="text-center py-5 text-muted">No products found. Start by creating one.</td>
            </tr>
            {{/unless}}
        </tbody>
    </table>
</div>

<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 15px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/product/create" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase">Product Name</label>
                        <input type="text" name="name" class="form-control bg-light border-0 py-2" placeholder="e.g. iPhone 15" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase">Category</label>
                        <select name="categoryId" class="form-select bg-light border-0 py-2" required>
                            <option value="" disabled selected>Select a category</option>
                            {{#each categories}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold text-uppercase">Price</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0">$</span>
                                <input type="number" step="0.01" name="price" class="form-control bg-light border-0 py-2" placeholder="0.00" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold text-uppercase">Stock</label>
                            <input type="number" name="stock" class="form-control bg-light border-0 py-2" placeholder="0" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0 p-4">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Create Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
