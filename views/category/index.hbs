<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold m-0">Categories</h2>
    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        + New Category
    </button>
</div>

<div class="card overflow-hidden">
    <table class="table m-0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>#{{this.id}}</td>
                <td class="fw-semibold">{{this.name}}</td>
                <td class="text-muted">{{this.description}}</td>
                <td class="text-end">
                    <a href="/category/{{this.id}}" class="btn btn-light btn-sm border">View Details</a>
                </td>
            </tr>
            {{/each}}
            {{#unless categories}}
            <tr>
                <td colspan="4" class="text-center py-5 text-muted">No categories found. Start by creating one.</td>
            </tr>
            {{/unless}}
        </tbody>
    </table>
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 15px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/category/create" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase">Category Name</label>
                        <input type="text" name="name" class="form-control bg-light border-0 py-2" placeholder="e.g. Electronics" required>
                    </div>
                    <div class="mb-0">
                        <label class="form-label small fw-bold text-uppercase">Description</label>
                        <textarea name="description" class="form-control bg-light border-0 py-2" rows="3" placeholder="Brief description..."></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0 p-4">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Create Category</button>
                </div>
            </form>
        </div>
    </div>
</div>
